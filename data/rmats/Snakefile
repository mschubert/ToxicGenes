comps = ['H1650_rbm8_vs_luc8', 'H1650_rbm24_vs_luc24',
         'HCC70_rbm8_vs_luc8', 'HCC70_rbm24_vs_luc24',
         'H838_rbm8_vs_luc8', 'H838_rbm24_vs_luc24', 'H838_rbm72_vs_luc72',
         'all_rbm8_vs_luc8', 'all_rbm24_vs_luc24']

rule all:
    input:
        expand("rmats_out/{paired}-{comp}", paired=['splice','paired'], comp=comps),
        expand("{paired}-{comp}-{junction}.pdf",
                paired=['splice','paired'], comp=comps, junction=['JC','JCEC'])

rule rmats:
    input:
        sample1 = "{cline}_{sample1}.txt",
        sample2 = "{cline}_{sample2}.txt"
    output:
        tmpdir = directory("rmats_tmp/{paired}-{cline}_{sample1}_vs_{sample2}"),
        outdir = directory("rmats_out/{paired}-{cline}_{sample1}_vs_{sample2}")
    params:
        stats = lambda wc: ["--paired-stats" if wc.paired == "paired" else ""][0]
    shell:
        "python ~/rmats-turbo/rmats.py"
            " --b1 {input.sample1}"
            " --b2 {input.sample2}"
            " --gtf genes_with_ERCC.gtf"
            " --readLength 150"
            " --allow-clipping"
            " --nthread 8"
            " {params.stats}"
            " --tmp {output.tmpdir}"
            " --od {output.outdir}"

rule splice:
    input:
        rscript = "splice.r",
        rmats = directory("rmats_out/{paired}-{comp}")
    output:
        plotfile = "{paired}-{comp}-{junction}.pdf"
    shell:
        "Rscript {input.rscript}"
            " --comp {wildcards.comp}"
            " --junction {wildcards.junction}"
            " --plotfile {output.plotfile}"
