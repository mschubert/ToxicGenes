from glob import glob

configfile: "../config.yaml"

subworkflow data_ccle:
    workdir: "../data/ccle"
    snakefile: "../data/ccle/Snakefile"

subworkflow genesets:
    workdir: "../data/genesets"
    snakefile: "../data/genesets/Snakefile"

fits = [ g[4:-2] for g in glob("fit_*.r") ]

mem = { 'pan' : 4096, '*' : 2048 }
cores = { 'pan' : 5, '*' : 0 }
time = { 'pan' : 480, '*' : 360 }

rule all:
    input:
        expand("{tissue}_{fit}/{sets}.pdf", tissue=config['ccle_tissues'],
                fit=fits, sets=['genes']) #config['genesets'] + ['genes'])

rule fit:
    input:
        rscript = "fit_{fit}.r",
        infile = data_ccle("dset.rds"),
        setfile = genesets("{set}.rds")
    output:
        outfile = "{tissue}_{fit}/{set}.xlsx",
    resources:
        mem = lambda wc: [ mem[wc.tissue] if wc.tissue in mem.keys() else mem['*'] ][0],
        cores = lambda wc: [ cores[wc.tissue] if wc.tissue in cores.keys() else cores['*'] ][0],
        walltime = lambda wc: [ time[wc.tissue] if wc.tissue in time.keys() else time['*'] ][0]
    group: "fit_and_plot"
    shell:
        "Rscript {input.rscript}"
            " --infile {input.infile}"
            " --setfile {input.setfile}"
            " --tissue {wildcards.tissue}"
            " --cores {resources.cores}"
            " --memory {resources.mem}"
            " --outfile {output.outfile}"

rule plot:
    input:
        rscript = "plot.r",
        infile = "{tissue}_{fit}/{set}.xlsx"
    output:
        plotfile = "{tissue}_{fit}/{set}.pdf"
    group: "fit_and_plot"
    shell:
        "Rscript {input.rscript}"
            " --infile {input.infile}"
            " --plotfile {output.plotfile}"
