subworkflow ccle:
    workdir: "ccle"
    snakefile: "ccle/Snakefile"

rule all:
    input:
        "df_ccle.rds",
        "df_tcga.rds"

rule ccle:
    input:
        rscript = "df_ccle.r",
        infile = ccle("dset.rds")
    output:
        outfile = "df_ccle.rds"
    resources:
        mem = 4096
    shell:
        "Rscript {input.rscript}"
            " --infile {input.infile}"
            " --outfile {output.outfile}"

rule tcga:
    input:
        rscript = "df_tcga.r"
    output:
        outfile = "df_tcga.rds"
    resources:
        mem = 120 * 1024,
        walltime = 120
    shell:
        "Rscript {input.rscript}"
            " --outfile {output.outfile}"
